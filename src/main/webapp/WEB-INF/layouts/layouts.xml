<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<!-- template pour les pages internes -->
	<definition name="default" template="/WEB-INF/layouts/default.jspx">
		<put-attribute name="head-tag" value="/WEB-INF/views/includes/simpleIncludes/head-tag.jspx" />
		<put-attribute name="header" value="/WEB-INF/views/includes/simpleIncludes/header.jspx" />
		<put-attribute name="menu" value="/WEB-INF/views/includes/simpleIncludes/menu.jspx" />
		<put-attribute name="footer" value="footer/withPassword" />				
	</definition>

	<!-- template pour les pages externes -->
	<definition name="public" template="/WEB-INF/layouts/default.jspx">
		<put-attribute name="head-tag" value="/WEB-INF/views/includes/simpleIncludes/head-tag.jspx" />
		<put-attribute name="header" value="/WEB-INF/views/includes/simpleIncludes/header.jspx" />
		<put-attribute name="footer" value="footer/withoutPassword" />
	</definition>

</tiles-definitions>
