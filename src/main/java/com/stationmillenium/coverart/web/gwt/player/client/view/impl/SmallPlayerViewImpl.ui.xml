<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">
    
    <ui:with type="com.stationmillenium.coverart.web.gwt.player.client.resources.PlayerResources" field="res" />
    
    <!-- Style -->
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.background-player {
			background-color: white;
			cursor: pointer;
			margin-left: 0px;
			margin-top: 0px;
			line-height: 50px;
		}
				
		.current-song {
			font-size: 20px;
			color: #428bca;
			font-style: italic;
			font-family: 'Open Sans', sans-serif;		
		}
		
		.current-song-title {
			font-size: 20px;
			color: #428bca;
			font-family: 'Open Sans', sans-serif;		
			margin-right: 5px;
		}
				
	</ui:style>
	
	<!-- Panel content -->
	<g:FocusPanel ui:field="mainPanel" height="50px" styleName="{style.background-player}">
		<g:HorizontalPanel>
			<g:Label styleName="{style.current-song-title}"><ui:msg>Actuellement Ã  l'antenne :</ui:msg></g:Label>	
			<g:Label ui:field="currentSong" styleName="{style.current-song}"/>
		</g:HorizontalPanel>
	</g:FocusPanel>
	
</ui:UiBinder> 