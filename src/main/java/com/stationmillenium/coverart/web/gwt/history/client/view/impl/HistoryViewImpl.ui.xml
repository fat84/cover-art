<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">
    
    <ui:with type="com.stationmillenium.coverart.web.gwt.history.client.resources.HistoryResources" field="res" />
    
    <!-- Style -->
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.background-player {
			background-color: black;
		}
		
		.background-white {
			background-color: white;
		}
		 
		.searchField {
			text-align: right;
			padding-right: 3px;
			display: inline;
		}
			
		.searchFieldFirst {
			text-align: left;
			padding-right: 5px;
			display: inline;			
		}
		
		.searchFieldIntermediate {
			text-align: right;
			padding-right: 3px;
			display: inline;
			padding-left: 5px;
		}
			
		.searchHour {
			text-align: left;
			display: inline;
			padding-right: 5px;
			padding-left: 2px;
		}
		
		.searchMinute {
			text-align: left;
			display: inline;
			padding-left: 2px;
			margin-right: 10px;
		}
		
		.spacer {
			display: inline;
			padding-left: 10px;		
		}	
		
		.searchFieldsBlock {
			margin-top: 5px;
		}
		
		.image {
			padding-top: 10px;
		}
		
		.search-block {
			background-color: #ff2217;
			border-radius: 5px;
			box-shadow: 0px 0px 3px #000000;
			background-image: -moz-linear-gradient(top, #ff2217, #000000);
			background-image: -ms-linear-gradient(top, #ff2217, #000000);
			background-image: -o-linear-gradient(top, #ff2217, #000000);
			background-image: -webkit-linear-gradient(top, #ff2217, #000000);
			background-image: linear-gradient(top, #ff2217, #000000);
			background-clip: padding-box;
			/*Use "background-clip: padding-box" when using rounded corners to avoid the gradient bleeding through the corners*/
			/*--IE9 DOES NOT SUPPORT CSS3 GRADIENT BACKGROUNDS--*/
			/*opacity: 0.85;*/			
			color: #ffffff;
			padding: 3px;
			margin: 2px;
		}
		
		.clickOnCover {
			color: white;
			font-style: italic;
			font-size: 10px;	
			margin-top: 3px;
		}
		
		.mention {
			text-align: left;
			color: white;
			font-style: italic;
			font-size: 10px;	
			margin-top: 3px;
		}
		
	</ui:style>
	
	<!-- Panel content -->
	<g:VerticalPanel width="575px" horizontalAlignment="center">
		<g:Image resource="{res.cetaitQuoi}"/>
		<g:DockLayoutPanel unit="PX" height="880px" width="575px" styleName="{style.background-player}" >
			<g:north size="100">
				<g:VerticalPanel>
					<g:VerticalPanel width="570px" verticalAlignment="top" horizontalAlignment="left" styleName="{style.search-block}">					
						<g:FlowPanel >
							<g:RadioButton styleName="{style.searchFieldFirst}" name="searchOn" ui:field="searchOnDate">Rechercher par date</g:RadioButton>
							<dp:DateBox ui:field="dateSearch" width="70px"/>
							<g:Label styleName="{style.spacer}" />
							<g:TextBox ui:field="hourSearch" width="15px"/>
							<g:Label styleName="{style.searchHour}">H</g:Label>
							<g:TextBox ui:field="minuteSearch" width="15px" />
							<g:Label styleName="{style.searchMinute}">M</g:Label>			
							<g:Button ui:field="launchSearch">Rechercher</g:Button>
							<g:Label styleName="{style.spacer}"/>
							<g:Button ui:field="cancelSearch">Annuler</g:Button>		
						</g:FlowPanel>	
						<g:FlowPanel styleName="{style.searchFieldsBlock}">
							<g:RadioButton styleName="{style.searchFieldFirst}" name="searchOn" ui:field="searchOnField">Ou</g:RadioButton>
							<g:SuggestBox ui:field="searchKeywords" width="120px" />
							<g:Label styleName="{style.searchFieldIntermediate}">sur</g:Label>
							<g:RadioButton name="searchType" ui:field="searchTypeAll">tout</g:RadioButton>
							<g:RadioButton name="searchType" ui:field="searchTypeArtist">artiste</g:RadioButton>
							<g:RadioButton name="searchType" ui:field="searchTypeTitle">titre</g:RadioButton>					
						</g:FlowPanel>										
					</g:VerticalPanel>			
					<g:Label styleName="{style.clickOnCover}">Cliquer sur un titre pour en afficher la pochette</g:Label>
				</g:VerticalPanel>
			</g:north>
			<g:west size="575">
				<g:VerticalPanel horizontalAlignment="center" width="575px" height="550px">
					<g:SimplePanel styleName="{style.image}" width="200px" height="200px">
						<g:Image ui:field="songImage" />
					</g:SimplePanel>
					<g:FlowPanel styleName="{style.background-white}" width="410px" height="560px">	
						<c:DataGrid ui:field="historyGrid" width="400px" pageSize="12" height="500px" />
						<c:SimplePager ui:field="historyGridPager" width="225px" height="50px"/>
					</g:FlowPanel>
				</g:VerticalPanel>			
			</g:west>
		</g:DockLayoutPanel>
		<g:SimplePanel width="575px" styleName="{style.mention}">
			<g:Label>Page « C’était quoi ce titre ? » Station Millenium by Vince</g:Label>
		</g:SimplePanel>
		
	</g:VerticalPanel>	
		
</ui:UiBinder>